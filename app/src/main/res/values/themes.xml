<resources>

    <!-- quit green theme. -->
    <style name="Theme.QuitGreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_green</item>
        <item name="colorPrimaryVariant">@color/lighter_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/lighter_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- no actions bar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--  cardView background in light theme  -->
    <style name="CardViewStyle">
        <item name="android:background">@drawable/round_gray</item>
    </style>

    <!--  playlist fragment background in light theme  -->
    <style name="PlaylistFragmentStyle">
        <item name="android:background">@color/light_gray</item>
    </style>

    <!--  playlist recycler view background in light theme  -->
    <style name="PlaylistRecyclerStyle">
        <item name="android:background">@drawable/round_left_right_edges_lighter_gray</item>
    </style>

    <!--  static playlist background in light theme  -->
    <style name="RoundBackground">
        <item name="android:background">@drawable/round_background_light</item>
    </style>

<!--  Controllers  -->
    <!--  play image view in light theme  -->
    <style name="PlayController">
        <item name="android:src">@drawable/ic_round_play_arrow_light </item>
    </style>

    <!--  Pause image view in light theme  -->
    <style name="PauseController">
        <item name="android:src">@drawable/ic_round_pause_light </item>
    </style>

    <!--  play next image view in light theme  -->
    <style name="PlayNextController">
        <item name="android:src">@drawable/ic_round_fast_forward_light </item>
    </style>

    <!--  play previous image view in light theme  -->
    <style name="PlayPreviousController">
        <item name="android:src">@drawable/ic_round_fast_rewind_light </item>
    </style>

    <!--  volume up image view in light theme  -->
    <style name="VolumeUpController">
        <item name="android:src">@drawable/ic_round_volume_up_light </item>
    </style>

    <!--  volume off image view in light theme  -->
    <style name="VolumeOffController">
        <item name="android:src">@drawable/ic_round_volume_off_light </item>
    </style>

    <!--  shuffle on image view in light theme  -->
    <style name="ShuffleOnController">
        <item name="android:src">@drawable/ic_round_shuffle_on_light </item>
    </style>

    <!--  shuffle off image view in light theme  -->
    <style name="ShuffleOffController">
        <item name="android:src">@drawable/ic_round_shuffle_off_light </item>
    </style>

    <!-- Favorite image view in light theme  -->
    <style name="FavoriteController">
        <item name="android:src">@drawable/ic_round_favorite_border_light </item>
    </style>

</resources>